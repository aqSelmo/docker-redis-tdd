{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "baseUrl": ".",
    "paths": {
        "@config/*": ["./src/config/*"],
        "@controllers/*": ["./src/controllers/*"],
        "@models/*": ["./src/models/*"],
        "@routes/*": ["./src/routes/*"],
        "@entities/*": ["./src/database/entities/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
